---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article>
    <header>
        <h1>{title}</h1>
    </header>
    <main>
        <slot />
    </main>
</article>

<style lang="css">
    article {
        width: 80ch;
    }
</style>

<!-- Global style is needed so that the "dynamic" tags coming from markdown get affected -->
<style lang="scss" global>
    article {
        *:not(:last-child) {
            margin-bottom: 1rem;
        }

        p {
            line-height: 1.5rem;
            text-align: justify;
        }

        h1, h2, h3, h4, h5, h6 {
            font-weight: bold;
            text-transform: capitalize;
        }

        h1 {
            font-size: 2.25rem;
        }

        h2 {
            font-size: 2.0rem;
        }

        h3 {
            font-size: 1.5rem;
        }

        h4 {
            font-size: 1.25rem;
        }

        ol {
            list-style: decimal;
            list-style-position: inside;
        }

        ul {
            list-style: disc;
            list-style-position: inside;
        }

        ol:not(:last-child) {
            margin-bottom: 2rem;
        }
    }
</style>
